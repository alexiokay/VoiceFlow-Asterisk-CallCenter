{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "core/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
